<div class="chat-header">
  <div class="group-name">hogefuga</div>
  <div class="chat-close"><a href="#">チャットを終了する</a></div>
</div>
<div class="chat-main">
  <div class="message">
    <div class="send-situation">
      <p class="send-user">Tom</p><time class="send-time">2020/3/31(Wed) 12:43:30</time>
    </div>
    <p class="send-message">おはよう</p>
  </div>
  <div class="message">
    <div class="send-situation">
      <p class="send-user">Tom</p><time class="send-time">2020/3/31(Wed) 12:43:30</time>
    </div>
    <p class="send-message">おはよう</p>
  </div>
</div>
<div class="chat-footer">
  <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
    <div class="input-form">
      <%= f.text_field :content, class: 'text-form', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'send-btn' %>
  <% end %>
</div>