<div class="message">
  <div class="send-situation">
    <div class="send-user">
      <%= message.user.name%>
    </div>
    <div class="send-time">
      <%= l message.created_at%>
    </div>
  </div>
  <div class="lower-message">
    <div class="send-message">
      <%= message.content%>
    </div>
    <%= image_tag message.image, class: 'message-image' if message.image.attached? %>
  </div>
</div>